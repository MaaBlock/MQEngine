{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows-ninja-debug-x64",
      "displayName": "Windows x64 Ninja Debug",
      "description": "Configures a Debug build using Ninja generator and MSVC x64 compiler.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-windows-debug",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "toolset": {
        "value": "host=x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      }
    },
    {
      "name": "windows-ninja-release-x64",
      "displayName": "Windows x64 Ninja Release",
      "description": "Configures a Release build using Ninja generator and MSVC x64 compiler.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-windows-release",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "toolset": {
        "value": "host=x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      }
    },
    {
      "name": "vs2022-debug-x64",
      "displayName": "Windows x64 VS 2022 Debug",
      "description": "Generates a Visual Studio 2022 solution for Debug x64.",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build-vs2022-debug",
      "architecture": {
        "value": "x64",
        "strategy": "set"
      },
      "toolset": {
        "value": "host=x64",
        "strategy": "set"
      },
      "cacheVariables": {}
    }
  ],
  "buildPresets": [
    {
      "name": "build-ninja-debug",
      "configurePreset": "windows-ninja-debug-x64"
    },
    {
      "name": "build-ninja-release",
      "configurePreset": "windows-ninja-release-x64"
    },
    {
      "name": "build-vs2022-debug",
      "configurePreset": "vs2022-debug-x64",
      "configuration": "Debug"
    }
  ]
}